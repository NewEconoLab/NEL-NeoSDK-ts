{
    "compilerOptions": {
        "module": "System",
        "target": "es5",
        "declaration": true,
        "sourceMap": true,
        "removeComments": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "moduleResolution": "node",
        "outFile": "../lib/neo-ts.js",
        "baseUrl": "./",
        "strict": false,
        "composite": true,
        "types": [
            "node",
            "jest"
        ],
        "typeRoots": [
            "./node_modules/@types"
        ],
        "lib": [
            "dom",
            "es2015"
        ],
    },
    "include": [
        "src/**/*.ts"
    ], // 要打包的文件
    "exclude": [
        "node_modules",
        "*.test.ts"
    ]
}